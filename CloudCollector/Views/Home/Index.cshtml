<!--顶部图片-->
<div class="m-bg-class_outer" style="width: 100%;height: 750px">
    <img src="~/images/bg.jpg" alt="" class="ui m-bg image" style="width: 100%;height: 100%">
    <div class="m-bg-class_cover" align="center">
        <div class="m-margin-top-maxx" align="center">
            <img class="ui circular image" align="middle" src="~/images/me.jpg" style="width: 150px;height: 150px;">
        </div>
        <div class="m-font-size-title-large" align="center">冰河盲鱼</div>

        <h3 class="m-font-size-text" align="center">每朵云都是自然的诗篇 ，能读懂它的人被称为“云彩收集者” </h3>
        <hr style="width: 30%">
        <h5 class="m-font-size-text-init-title m-margin-top-large">“我要这天再遮不住我眼”</h5>
        <h5 class="m-font-size-text-init-title">“我要这地再埋不了我心”</h5>
        <h5 class="m-font-size-text-init-title">“我要这众生都明白我意”</h5>
        <h5 class="m-font-size-text-init-title">“我要这诸佛都烟消云散”</h5>
        <div id="waypoint" class="ui m-margin-top-large" align="center">
        </div>
        <div class="hiddenDiv"></div>
    </div>

</div>
<!--最新推荐-->
<div class="ui m-padded-tb-large">
    <div class="ui m-container-small m-opacity">
        <div class="ui secondary segment " align="center">
            云彩收集者丨分类
        </div>
    </div>
    <div class="ui stackable m-container-mini m-opacity grid">
        @foreach (var item in base.ViewBag.category)
        {
            <div class="m-margin-tb-tiny four wide column">
                <a href="#" class="class_outer" target="_blank">
                    <img src="@item.Img" alt="" class="ui rounded image">
                    <span class="class_cover">
                        <h4 class="m-font-size-blog-text m-margin-tb-tiny">@item.Name</h4>
                    </span>
                </a>
            </div>
        }
    </div>
</div>
<!--中间内容-->
<div class="m-padded-tb-big animated fadeIn">
    <div class="ui container">
        <div class="ui stackable grid">
            <!--博客内容-->
            <div class="ui vertical segment">
                <div class="ui m-container-small m-opacity">
                    <div class="ui secondary segment " align="center">
                        云彩收集者丨把天空的表情收入囊中
                    </div>
                </div>
                <!--博文列表-->
                @foreach (var item in Model) { 
                    <div class="ui padded segment m-padded-tb-large m-opacity">
                        <div class="ui large aligned mobile reversed stackable grid">
                            <!--博文信息-->
                            <div class="eleven wide column ">
                                <h3 class="ui header"><a href="#" target="_blank" class="m-black">@item.Name</a></h3>
                                <p class="m-text m-margin-top-max">@item.Memo</p>
                                <div class="ui m-margin-top-max grid">
                                    <div class="eleven wide column">
                                        <div class="ui mini horizontal link list">
                                            <div class="item">
                                                <img src="~/images/me.jpg" alt="" class="ui avatar image">
                                                <div class="content"><a href="#" target="_blank" class="header">冰河盲鱼</a></div>
                                            </div>
                                            <div class="item">
                                                <span>创建于：@item.Date</span>
                                            </div>
                                            <div class="item">
                                                 <span>浏览：@item.SeeCount</span>
                                            </div>                                         
                                        </div>
                                    </div>
                                    <div class="right aligned five wide column">
                                        <a href="Home\Detail?id=@item.Id" target="_blank" class="ui teal basic label m-padded-tiny m-text-thin">好文</a>
                                    </div>
                                </div>
                            </div>
                            <!--博文图片-->
                            <div class="five wide column">
                                <a href="#" target="_blank">
                                    <!--img src="~/images/backimg1.jpg" alt="" class="ui rounded image">-->
                                    <img src="@item.Pic" alt="" class="ui rounded image">
                                </a>
                            </div>

                        </div>
                    </div>
                }
            </div>
            <!--分页-->
            <div class="ui bottom attached segment m-opacity stackable grid">
                <div class="three wide column" align="center">
                    @*<a class="item">上一页</a>*@
                    <a href="?page=@(Convert.ToInt32(ViewData["PageIndex"])-1)&searchString=@ViewData["SearchString"]"
                       class="item">
                        上一页
                    </a>
                </div>

                <div class="ten wide column" align="center">
                    <p> <span></span> / <span></span> </p>
                </div>

                <div class="three wide column" align="center">
                    @*<a class="item">下一页</a>*@
                    <a href="?page=@(Convert.ToInt32(ViewData["PageIndex"])+1)&searchString=@ViewData["SearchString"]"
                       class="item">
                        下一页
                    </a>
                    @*<a asp-action="Index"
                       asp-route-pageIndex="@(Model.PageIndex  + 1)"
                       asp-route-searchString="@ViewData["SearchString"]"
                       class="item">
                        下一页
                    </a>*@
                </div>
            </div>

            @*<a asp-action="./Index"
               asp-route-pageIndex="@(Model.Count - 1)"
               asp-route-searchString="@ViewData["SearchString"]"
               class="item">
                上一页
            </a>

            <a asp-action="./Index"
               asp-route-pageIndex="@(Model.Count + 1)"
               asp-route-searchString="@ViewData["SearchString"]"
               class="item">
                下一页
            </a>*@
        </div>
    </div>

</div>
<!--置顶图标-->
<div class="m-padded-tb-large m-fixed m-right-bottom">
    <a href="#" class="ui icon button"><i class="chevron up icon"></i> </a>
</div>


