
@{
    ViewData["Title"] = "Message";
}

<!--顶部图片-->
<div class="m-bg-type_outer" style="width: 100%;height: 40%">
    <img src="~/images/messagebg.jpg" alt="" class="ui m-bg image" style="width: 100%;height: 100%">
    <div class="m-bg-class_cover">
        <div class="ui container" style="position: relative ;bottom: -540px;">
            <div class="m-font-size-title m-right-bottom" align="center" style="font-family:'STXingkai'">云彩收集放飞板</div>
            <div class="m-font-size-text-init-title m-margin-top" align="center">云就像是天空的表情，但并不是一件可有可无的摆设。说出你想对云说的话吧。</div>

        </div>
    </div>
</div>


<!--中间内容-->
<div id="waypoint" class="m-margin- animated fadeIn">
    <div class="ui container m-opacity box-shadow-max">
        <!--                新增留言-->
        <form asp-action="Message">
            <div id="message-form" class="ui form">
                <input type="hidden" name="parentMessage.id" value="-1">
                <!--                    留言区-->
                <div class="field">
                    <textarea name="Context" placeholder="请输入你想要说的话..."></textarea>
                </div>
                <div class="ui grid">
                    <!--输入姓名-->
                    <div class="five wide column">
                        <div class="field m-mobile-wide m-margin-bottom-small">
                            <div class="ui left icon input">  
                                <input type="text" name="CreatorName" placeholder="昵称">
                            </div>
                        </div>
                    </div>

                    <!--输入邮箱-->
