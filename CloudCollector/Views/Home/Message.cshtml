                    <div class="right aligned six wide column">
                        <div class="field m-mobile-wide m-margin-bottom-small">
                            <button id="messagepost-btn" type="submit" class="ui teal button m-mobile-wide">发布</button>
                        </div>
                    </div>
                </div>
            </div>

        </form>
        <!--留言区-->
