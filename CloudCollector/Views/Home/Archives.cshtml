                {
                    <li class="">
                        <div>
                            <time>@item.Date</time>
                            <div class="scientist">
                                <a href="Detail?id=@item.Id" target="_blank">
                                    <h3 class="state" style="text-align:center;font-size: 16px;color: #000;">@item.Name</h3>
                                </a>
                            </div>
                        </div>
                    </li>
                }
