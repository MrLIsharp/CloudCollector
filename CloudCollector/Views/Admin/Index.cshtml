
@{
    ViewData["Title"] = "Index";
}

<!--中间内容-->
<div class="m-bg-type_outer" style="width: 100%;height: 50%; margin-top: 100px;">
    <div class="ui container">
        <div class="ui secondary segment form">
            <input type="hidden" name="page">
            <div class="inline fields">
                <div class="field">
                    <input type="text" name="title" placeholder="标题">
                </div>
                <div class="field">
                    <div class="ui labeled action input">
                        <div class="ui type selection dropdown">
                            <input type="hidden" name="typeId">
                            <i class="dropdown icon"></i>
                            <div class="default text">分类</div>
                            <div class="menu">
                                <div class="item" data-value="1">我的故事</div>
                            </div>
                        </div>
                        <button id="clear-btn" class="ui compact button">clear</button>
                    </div>
                </div>
                <div class="field">
                    <button type="button" id="search-btn" class="ui mini teal basic button"><i class="search icon"></i>搜索</button>
                </div>
            </div>
        </div>
        <div id="table-container">
            <table class="ui compact teal table">
                <thead>
                    <tr align="center">
                        <th>ID</th>
                        <th>标题</th>
                        <th>类型</th>
                        <th>推荐</th>
                        <th>状态</th>
                        <th>更新时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr align="center">
                        <td>1</td>
                        <td>大圣，此去欲何?</td>
                        <td>我的故事</td>
                        <td>是</td>
                        <td>草稿</td>
                        <td>2020-01-02 05:20</td>
                        <td>
                            <a href="#" class="ui mini teal basic button">编辑</a>
                            <a href="#" onclick="return confirm('确定要删除该文章吗？三思啊! 删了可就没了！')" class="ui mini red basic button">删除</a>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="7">
                            <div class="ui inverted divided stackable grid">
                                <div class="three wide column" align="center">
                                    <a class="item">上一页</a>
                                </div>

                                <div class="ten wide column" align="center">
                                    <p>第 <span></span> 页，共 <span></span> 页，有 <span></span> 篇文章</p>
                                </div>

                                <div class="three wide column" align="center">
                                    <a class="item">下一页</a>
                                </div>
                            </div>
                            <div align="center">
                                <a href="#">
                                    <button type="button" class="ui teal button m-mobile-wide m-margin-top"><i class="pencil icon"></i>新增</button>
                                </a>
                            </div>
                        </th>
                    </tr>
                </tfoot>
            </table>

            <div class="ui success message">
                <i class="close icon"></i>
                <div class="">提示：操作成功！</div>
            </div>

        </div>

    </div>
</div>



