
@{
    ViewData["Title"] = "Cloud";
}

<!--中间内容-->
<div class="m-bg-type_outer" style="width: 100%;height: 50%;margin-top: 100px;">
    <div class="ui container">
        <form asp-action="Cloud" id="blog-form" method="post" class="ui form">
                <input type="hidden" name="published">
                <input type="hidden" name="id">
                <div class="two fields">
                    <div class="required field">
                        <div class="ui left labeled action input">
                            <label class="ui compact teal basic label">标题</label>
                            <input type="text" name="Name" placeholder="云彩标题">
                        </div>
                    </div>

                    <div class="required field">
                        <div class="ui left labeled input">
                            <label class="ui teal basic label">昵称</label>
                            <input type="text" name="CreatorName" placeholder="发布者昵称">
                        </div>
                    </div>
                </div>

                <div class="two fields">
                    <div class="required field">
                        <div class="ui left labeled action input">
                            <label class="ui compact teal basic label">分类</label>
                            @*<div class="ui fluid selection dropdown">*@
                                <!--编辑-->
                                <input type="text" name="TypeId" placeholder="分类">
                                @*<i class="dropdown icon"></i>
                            <div class="default text">分类</div>
                            <div class="menu">
                                <div class="item" data-value="1">我的故事</div>
                            </div>*@
                            @*</div>*@
                        </div>
                    </div>

                    <div class="required field">
                        <div class="ui left labeled input">
                            <label class="ui teal basic label">首图</label>
                            <input type="text" name="Pic" placeholder="首图引用地址">
                        </div>
                    </div>
                </div>

                <div class="required field">
                    <textarea name="Memo" placeholder="云彩描述..." maxlength="200"></textarea>
                </div>



                <div class="ui error message"></div>

                <div class="ui right aligned container">
                    <button type="button" class="ui button" onclick="window.history.go(-1)">返回</button>
                    <button type="submit" id="publish-btn" class="ui teal button">发布</button>
                </div>

            </form>
</div>
</div>
@section scripts{
    <script>
        $('.ui.form').form({
            fields: {
                title: {
                    identifier: 'Name',
                    rules: [{
                        type: 'empty',
                        prompt: '标题：请输入云彩标题'
                    }]
                },
                content: {
                    identifier: 'Memo',
                    rules: [{
                        type: 'empty',
                        prompt: '标题：请输入云彩描述'
                    }]
                },
                typeId: {
                    identifier: 'TypeId',
                    rules: [{
                        type: 'empty',
                        prompt: '标题：请选择分类'
                    }]
                },
                firstPicture: {
                    identifier: 'Pic',
                    rules: [{
                        type: 'empty',
                        prompt: '标题：请输入首图地址'
                    }]
                },
                description: {
                    identifier: 'CreatorName',
                    rules: [{
                        type: 'empty',
                        prompt: '标题：请输入发布人昵称'
                    }]
                }
            }
        });
    </script>
}



